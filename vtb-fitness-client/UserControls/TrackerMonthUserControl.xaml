<UserControl x:Class="vtb_fitness_client.UserControls.TrackerMonthUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vtb_fitness_client.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Margin="0 0 0 20">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="month_TextBlock"
                       Text="Month"
                       Margin="0 0 0 10"
                       Style="{StaticResource header_TextBlock}"
                       HorizontalAlignment="Left"/>
            <WrapPanel x:Name="days_WrapPanel"
                       MaxWidth="1280"
                       />
        </StackPanel>
    </Grid>
</UserControl>
