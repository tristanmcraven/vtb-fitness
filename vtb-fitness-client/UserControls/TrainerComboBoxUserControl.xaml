<UserControl x:Class="vtb_fitness_client.UserControls.TrainerComboBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vtb_fitness_client.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="pfp"

               Height="45"
               Margin="0 0 15 0"/>
        <TextBlock x:Name="trainerName_TextBlock"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   FontSize="20"/>

        <TextBlock Text="&lt; Нет &gt;"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Name="noTrainer_TextBlock"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>
